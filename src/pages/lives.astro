---
import ThemeButton from "@src/components/atoms/ThemeButton.astro";
import Layout from "@src/layouts/Layout.astro";
import Title from "@src/components/atoms/Title.astro";
import AboutTwitch from "@data/aboutTwitch.mdx";
import CardAbout from "@src/components/atoms/CardAbout.astro";
import Avatar from "@src/components/atoms/Avatar.astro";
import ArrowLink from "@src/components/atoms/ArrowLink.astro";
import userData from "@data/user.json";
---

<Layout title="Lives">
  <main class="relative">
    <ArrowLink
      link="/"
      direction="left"
      transition="home"
      class="absolute top-4 left-4"
    />
    <Avatar
      transition="about"
      hasName={false}
      name={userData.name}
      profile__pic={userData.profilePic}
    />
    <section class="flex flex-col items-center">
      <Title title="Plataformas disponibles" />
      <article
        class="mt-10 content flex text-left flex-wrap justify-around text-balance items-start gap-10 lg:gap-2"
      >
        <div
          class="basis-[50%] min-w-[20rem] prose dark:prose-invert prose-h2:font-extrabold prose-h2:text-3xl prose-a:text-blue-600 prose-p:text-left prose-p:text-color-text prose-img:rounded-xl prose-headings:text-color-text"
        >
          <AboutTwitch />
        </div>
        <div class="relative">
          <div
            class="basis-auto w-38 h-38 lg:w-[244px] lg:h-[244px] flex flex-col items-center justify-center"
          >
            <img class="" src="/img/TwitchCaja.png" alt="" />
          </div>

          <div
            class="absolute top-20 right-20 lg:top-30 lg:right-40 overflow-hidden rounded-full w-20 h-20 lg:w-30 lg:h-30 bg-caracol"
          >
            <img
              src="https://avatars.githubusercontent.com/u/102200061?v=4"
              alt=""
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </article>
    </section>
  </main>
</Layout>

<style>
  main {
    min-height: 100dvh;
    padding: 1rem;
    padding-top: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }
</style>
