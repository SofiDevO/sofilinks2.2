---
import Layout from "@layouts/Layout.astro";
import SocialIcons from "@src/components/atoms/SocialIcons.astro";
import BentoMain from "@organisms/BentoMain.astro";
import SupportBento from "@organisms/SupportBento.astro";
import Header from "@src/components/organisms/Header.astro";
import userData from "@data/user.json";
import BlogPost from "@src/components/atoms/BlogPost/BlogPost";
import Title from "@src/components/atoms/Title.astro";
import SwiperComponent from "@molecules/SwiperComponent/SwiperComponent.astro";
export const prerender = true;

---

<Layout title="Welcome to Astro.">
  <Header userData={userData}/>
  <main class="flex flex-col justify-center items-center  w-full space-y-6 pb-10 h-full  px-4 gap-[.8rem] pt-[4rem] lg:pt-[3rem]">
    <!-- Num of social links 👇🏻 by default it show all -->
    <SocialIcons linksCount={5}/>
    <BentoMain  userData={userData}/>
    <Title title="Mi artículo más reciente" class="text-center bg-gradient-to-r from-caracol to-celeste bg-clip-text text-4xl lg:text-5xl font-bold text-transparent my-4"/>
    <BlogPost  />

    <Title title="Apoya mi contenido" class="text-center bg-gradient-to-r from-caracol to-celeste bg-clip-text  text-4xl lg:text-5xl font-bold text-transparent my-4"/>
    <SupportBento />
    <Title title="Mi video más reciente" class="text-center bg-gradient-to-r from-caracol to-celeste bg-clip-text text-4xl lg:text-5xl font-bold text-transparent my-4"/>
    <SwiperComponent />

  </main>
</Layout>
