---
import User from "@data/user.json";
import Support from "@data/support.json";
const { url, title } = Support.github;
const githubImagaProfile = User.github + ".png";
---

<a
  href={url}
  target="_blank"
  class="relative group/icon w-full h-full flex flex-col items-center justify-around gap-4 p-2 bg-gradient-to-t from-[#CA95FF] to-white border-[1.8px] border-[#D6ACFF] shadow-[0_1px_6.7px_0] shadow-[#763CC7] rounded-md"
>
  <h3 class="text-text font-bold text-xl lg:text-3xl text-balance z-10">{title}</h3>
  <div class="w-full flex flex-row justify-around gap-2">
    <img
      src={githubImagaProfile}
      alt="Github Sponsors"
      class="object-cover aspect-square w-40 h-40 rounded-full"
    />

    <iconify-icon
      class="text-[#763CC7] w-full  text-[15rem] absolute top-30 left-60 rotate-30   duration-500 group-hover/icon:top-17 group-hover/ transition-all ease-in-out "
      icon="fa:github-alt"
    >
    </iconify-icon>
  </div>
</a>
