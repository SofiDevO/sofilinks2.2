---
import productData from "@data/productData.json";
type Product = {
  title: string;
  imageID: string;
  url: string;
};
---

<div class="flex flex-col w-full h-full relative">

  <swiper-container
    class="swiperProduct"
    grab-cursor="true"
    pagination="true"
    pagination-clickable="true"
    navigation="false"
    loop="true"
  >
    {
      productData.map((product: Product) => {
        const { title, imageID: image } = product;
        return (
          <swiper-slide>
            <a href={product.url} target="_blank" class="w-40 h-40 flex items-center justify-center  rounded-3xl relative ">
              <img
                class="w-30 h-30 lg:w-40 lg:h-40  -rotate-10"
                src={`https://i.imgur.com/${image}.png`}
                alt={title}
              />
            </a>
          </swiper-slide>
        );
      })
    }
  </swiper-container>
  <div class="absolute bg-white bottom-0 w-full h-30 lg:h-40 rounded-3xl shadow-[0px_0px_6.8px_0px_rgba(0,0,0,0.25)]">

  </div>
  <style>
    .swiper__container {
      width: 100%;
      height: 100%;
    }

    swiper-container {
      width: 100%;
      height: 100%;
      &::part(pagination) {
        top: 200px;
        @media screen and (max-width  : 768px) {
          top:85%
        }
      }
    }

    swiper-slide {
      text-align: center;
      font-size: 18px;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 25dvh;
    }

    swiper-slide img {
      display: block;
      object-fit: cover;
    }
  </style>
</div>
