---
import Avatar from "../atoms/Avatar.astro";
const {userData} = Astro.props
import { fade } from "astro:transitions";
---

<header class="w-full max-w-[500px] h-[20dvh] min-h-[8rem] flex flex-col  justify-start relative ">
  <div class="banner__container">
    <img class="h-[20dvh]  object-cover  w-full bg-top" src={userData.bannerImage} />
    <div class="reflect"></div>
  </div>
  <Avatar name={userData.name} profile__pic={userData.profilePic}
    transition="home"
    animate="fade"
  />
</header>

<style>
  .banner__container {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 768px;
	height: 5dvh;
    z-index: -1;
  }

  .reflect {
    background-size: cover;
    width: 100%;
    height: 14dvh;
    backdrop-filter: blur(26px);
    position: absolute;
	top:360%;
    background: linear-gradient(to bottom, #4b00559d, var(--bg-color-default));
    mask-image: linear-gradient(to bottom, #5c0063, #2c014a);
    overflow: hidden;

  }
  .card__container {
    display: flex;
    gap: 1rem;
  }

  .card {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background: black;
    max-width: 30rem;
    color: white;
    padding: 2rem;
    border-radius: 12px;
    & h1 {
      text-align: center;
    }
  }
</style>
